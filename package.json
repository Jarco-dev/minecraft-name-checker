{
    "name": "typescript-template",
    "version": "1.2.0",
    "description": "A basic typescript project template",
    "main": "dist/index.js",
    "author": "Jarco-dev",
    "license": "MIT",
    "engines": {
        "node": "^22.13.0"
    },
    "scripts": {
        "start": "node dist/index.js",
        "dev": "tsx watch --clear-screen=false src/index.ts",
        "clean": "rimraf ./dist",
        "build": "npm run clean && tsc --build --force && tsc-alias",
        "type-check": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix"
    },
    "dependencies": {
        "discord.js": "^14.25.1",
        "dotenv": "^17.2.3",
        "moment": "^2.30.1",
        "node-cron": "^4.2.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.26.0",
        "@types/node": "^22.13.0",
        "@types/node-cron": "^3.0.11",
        "@typescript-eslint/eslint-plugin": "^8.32.0",
        "@typescript-eslint/parser": "^8.32.0",
        "eslint": "^9.26.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-perfectionist": "^4.12.3",
        "eslint-plugin-prettier": "^5.4.0",
        "eslint-plugin-yml": "^1.18.0",
        "globals": "^16.1.0",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.19.4",
        "typescript": "^5.8.3"
    }
}
